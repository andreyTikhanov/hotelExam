<Page x:Class="MyHotel.View.SettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyHotel.View"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="SettingPage">

    <Grid Background="Bisque">
        <StackPanel>
            <TextBox Style="{StaticResource myTextBoxes}" Name="tbMoney" Margin="290 150 290 0"/>
            <Button Margin="0 40 0 20" Style="{StaticResource myButton}" Content="Пополнить счет" Click="btnAddMoney"/>
            <Label Style="{StaticResource myLabels}" Name="lbFunc" Content="Ведутся работы по добавлению функциональности" Margin="150 0 150 0"/>
            <Button Style="{StaticResource myButton}" Content="Назад" Margin="0 60 0 0" Click="btnBack_Click"/>
            

        </StackPanel>
    </Grid>
</Page>
