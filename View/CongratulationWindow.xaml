<Window x:Class="MyHotel.View.CongratulationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyHotel.View"
        mc:Ignorable="d"
        Title="CongratulationWindow" Height="250" Width="400">
    <StackPanel Background="Bisque">
        <Label Margin="40 10 0 0" Style="{StaticResource myLabels}" Content="Поздравляем с регистрацией!" Width="324"/>
        <Label Style="{StaticResource myLabels}" Content="Дарим Вам 500 бонусных рублей!" Width="325" />
        <Button Style="{StaticResource myButton}" Content="Ok" Margin="0 60 0 0" Click="btnOk_Click"/>
    </StackPanel>
</Window>
